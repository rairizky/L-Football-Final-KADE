<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_detail"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/item_detail_league_image"
        android:padding="10dp"
        android:src="@drawable/scotish_premier_league"
        android:background="@color/colorMatte"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <RelativeLayout
        android:layout_marginLeft="-5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_detail_league_name"
                tools:text="@string/name_item_detail"
                android:paddingTop="2.5dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_league_name"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_light"
                android:maxLines="1"
                android:paddingRight="40dp"
                android:paddingLeft="15dp"
                android:maxWidth="250dp"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/item_detail_league_description"
                tools:text="@string/desc_item_detail"
                android:fontFamily="@font/rubik_light"
                android:paddingLeft="15dp"
                android:paddingRight="50dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <FrameLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/bg_league_button"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>