<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/detailFavorite"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/favoriteEventDate"
                tools:text="2019-11-30"
                android:textAlignment="center"
                android:textColor="@color/colorMatte"
                android:fontFamily="@font/rubik_light"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/FavoriteEventHomeScore"
                    tools:text="0"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorMatte"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/FavoriteEventHomeTeam"
                    tools:text="Arsenal"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorMatte"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/FavoriteEventAwayScore"
                    tools:text="2"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorMatte"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/FavoriteEventAwayTeam"
                    tools:text="Man City"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorMatte"
                    android:textSize="18sp"
                    android:gravity="left|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>