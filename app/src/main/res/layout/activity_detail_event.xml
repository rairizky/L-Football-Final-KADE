<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/rlEvent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/placeholder_detail_event"/>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
                android:id="@+id/layoutDetailEvent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/eventDate"
                    tools:text="2019-11-30"
                    android:textAlignment="center"
                    android:textColor="@color/colorMatte"
                    android:fontFamily="@font/rubik_light"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/eventHomeBadge"
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                        <TextView
                            tools:text="Team Home"
                            android:id="@+id/eventHomeTeam"
                            android:textSize="15sp"
                            android:fontFamily="@font/rubik"
                            android:textColor="@color/colorMatte"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            tools:text="0"
                            android:id="@+id/eventHomeScore"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/colorMatte"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/eventAwayBadge"
                            android:layout_gravity="center"
                            android:layout_width="70dp"
                            android:layout_height="70dp"/>
                        <TextView
                            tools:text="Team Away"
                            android:id="@+id/eventAwayTeam"
                            android:textSize="15sp"
                            android:fontFamily="@font/rubik"
                            android:textColor="@color/colorMatte"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            tools:text="0"
                            android:id="@+id/eventAwayScore"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/colorMatte"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:text="@string/stat_game"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/colorMatte"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/goals"
                        android:fontFamily="@font/rubik_light"
                        android:textColor="@color/colorMatte"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="-"
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeGoal"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorGreen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="-"
                                android:layout_gravity="top"
                                android:id="@+id/eventAwayGoal"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorGreen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPlaceholder"
                    android:layout_width="300dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/card"
                        android:fontFamily="@font/rubik_light"
                        android:textColor="@color/colorMatte"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:gravity="center"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="-"
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeYellowCard"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorYellow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="-"
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeRedCard"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorRed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="-"
                                android:layout_gravity="top"
                                android:id="@+id/eventAwayYellowCard"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorYellow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="-"
                                android:layout_gravity="top"
                                android:id="@+id/eventAwayRedCard"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorRed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPlaceholder"
                    android:layout_width="300dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:text="@string/formation"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/colorMatte"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/keeper"
                        android:fontFamily="@font/rubik_light"
                        android:textColor="@color/colorMatte"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeKeeper"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:id="@+id/eventAwayKeeper"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPlaceholder"
                    android:layout_width="300dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/defend"
                        android:textColor="@color/colorMatte"
                        android:fontFamily="@font/rubik_light"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeDefend"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:id="@+id/eventAwayDefend"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPlaceholder"
                    android:layout_width="300dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/midfield"
                        android:fontFamily="@font/rubik_light"
                        android:textColor="@color/colorMatte"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeMid"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:id="@+id/eventAwayMid"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPlaceholder"
                    android:layout_width="300dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/forward"
                        android:textColor="@color/colorMatte"
                        android:fontFamily="@font/rubik_light"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeForward"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:id="@+id/eventAwayForward"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center"
                    android:background="@color/colorPlaceholder"
                    android:layout_width="300dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/subtitutes"
                        android:fontFamily="@font/rubik_light"
                        android:textColor="@color/colorMatte"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:id="@+id/eventHomeSubtitutes"
                                android:textSize="15sp"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="top"
                                android:id="@+id/eventAwaySubtitutes"
                                android:textSize="15sp"
                                android:gravity="right|top"
                                android:fontFamily="@font/rubik"
                                android:textColor="@color/colorMatte"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>